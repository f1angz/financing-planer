<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.controller.SettingsController"
      styleClass="content-area"
      spacing="20">
    
    <padding>
        <Insets top="30" right="30" bottom="30" left="30"/>
    </padding>

    <Label text="Настройки" styleClass="page-title"/>
    
    <!-- Секция аккаунта -->
    <VBox spacing="15" styleClass="form-container">
        <Label text="Аккаунт" styleClass="section-title"/>
        
        <HBox spacing="15" alignment="CENTER_LEFT">
            <Label text="Текущий пользователь:" styleClass="settings-label"/>
            <Label fx:id="usernameLabel" text="" styleClass="settings-value"/>
        </HBox>
        
        <HBox spacing="15" alignment="CENTER_LEFT">
            <Button text="Выйти из аккаунта" onAction="#onLogout" styleClass="logout-button" prefHeight="40"/>
        </HBox>
    </VBox>

</VBox>



