<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.controller.RegisterController"
            styleClass="root"
            prefWidth="500" prefHeight="650">

    <center>
        <VBox spacing="25" alignment="CENTER" styleClass="login-container">
            <padding>
                <Insets top="40" right="50" bottom="40" left="50"/>
            </padding>

            <!-- Заголовок -->
            <Label text="Регистрация" styleClass="login-title"/>
            <Label text="Создайте новый аккаунт" styleClass="login-subtitle"/>

            <!-- Форма регистрации -->
            <VBox spacing="18" maxWidth="350">
                <!-- Имя пользователя -->
                <VBox spacing="8">
                    <Label text="Имя пользователя" styleClass="field-label"/>
                    <TextField fx:id="usernameField" promptText="Минимум 3 символа" 
                              styleClass="dialog-field"/>
                </VBox>

                <!-- Email -->
                <VBox spacing="8">
                    <Label text="Email (необязательно)" styleClass="field-label"/>
                    <TextField fx:id="emailField" promptText="example@mail.com" 
                              styleClass="dialog-field"/>
                </VBox>

                <!-- Пароль -->
                <VBox spacing="8">
                    <Label text="Пароль" styleClass="field-label"/>
                    <PasswordField fx:id="passwordField" promptText="Минимум 6 символов" 
                                  styleClass="dialog-field"/>
                </VBox>

                <!-- Подтверждение пароля -->
                <VBox spacing="8">
                    <Label text="Подтверждение пароля" styleClass="field-label"/>
                    <PasswordField fx:id="confirmPasswordField" promptText="Повторите пароль" 
                                  styleClass="dialog-field"/>
                </VBox>

                <!-- Сообщение об ошибке -->
                <Label fx:id="errorLabel" styleClass="error-label" visible="false" managed="false"/>

                <!-- Кнопка регистрации -->
                <Button text="Зарегистрироваться" onAction="#onRegister" 
                       styleClass="save-button" maxWidth="Infinity" prefHeight="45"/>

                <!-- Разделитель -->
                <Separator/>

                <!-- Кнопка возврата к логину -->
                <HBox spacing="10" alignment="CENTER">
                    <Label text="Уже есть аккаунт?" styleClass="field-label"/>
                    <Hyperlink text="Войти" onAction="#onBackToLogin" 
                              styleClass="register-link"/>
                </HBox>
            </VBox>
        </VBox>
    </center>

</BorderPane>

